<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="48dp"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:orientation="vertical"
        android:id="@+id/tabitem">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tabitem_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:textSize="10dp"
            android:textColor="@color/navitem_content_default_color"
            android:layout_marginTop="4dp"
            android:id="@+id/tabitem_text"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:minWidth="25dp"
        android:layout_height="25dp"
        android:textSize="12dp"
        android:background="@drawable/shape_red_filled_circle"
        android:text="1000+"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:singleLine="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_toRightOf="@id/tabitem"
        android:layout_alignTop="@id/tabitem"
        android:layout_marginBottom="-24dp"
        android:layout_marginLeft="-24dp"
        android:visibility="gone"
        android:id="@+id/tabitem_notification"/>


</RelativeLayout>